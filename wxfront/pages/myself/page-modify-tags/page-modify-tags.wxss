/* page-modify-tags.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.selected-tags-container {
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.selected-tag-item {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.tag-text {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #f0f0f0;
  cursor: pointer;
}

.cards-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.tag-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #f0f0f0;
  cursor: pointer;
}

.custom-button {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #ff0000;
  color: #fff;
  cursor: pointer;
}

.save-button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #1aad19;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.custom-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.popup-content {
  background-color: #fff;
  border-radius: 10rpx 10rpx 0 0;
  padding: 20rpx;
}

.popup-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.custom-input {
  width: 100%;
  height: 60rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  margin-bottom: 20rpx;
}

.popup-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.popup-button {
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background-color: #1aad19;
  border-radius: 10rpx;
}

.popup-button.cancel {
  background-color: #ff0000;
}