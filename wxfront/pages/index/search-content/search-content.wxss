/* 返回按钮样式 */
.back-button {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 搜索框容器 */
.search-bar__form {
  display: flex;
  flex: 1;
  margin-left: 10rpx;
  margin-right: 10rpx;
  align-items: center;
}

/* 搜索框样式 */
.search-bar__box {
  display: flex;
  align-items: center;
  background: #f5f5f5; /* 修改背景色与图片一致 */
  border-radius: 50rpx; /* 圆角 */
  height: 100%;
  padding: 0 20rpx;
  flex: 1;
}

/* 输入框样式 */
.search-bar__input {
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
  margin-left: 10rpx;
}

/* 右侧按钮样式 */
.extra-buttons {
  display: flex;
  align-items: center;
}

.icon-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  background-color: #ffffff;
  border-radius: 50%;
  margin-left: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
}

/* 历史搜索标题样式 */
.history-title {
  font-size: 16px;
  color: #333;
}

/* 历史搜索项样式 */
.history-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.history-item {
  background-color: #f5f5f5;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 14px;
  color: #333;
}

/* 右侧删除按钮 */
.icon-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  background-color: #ffffff;
  border-radius: 50%;
  margin-left: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}
